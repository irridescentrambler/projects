<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="col-sm-6 offset-sm-3"> 
      <%= form_for @project do |f| %>
        
        <div class="form-group">
          <%= f.label :name, for: "project_name" %>
          <%= f.text_field :name, class: "form-control", id: "project_name", placeholder: "Enter project name", required: true %>
        </div>
        
        <div class="form-group">
          <%= f.label :description, for: "project_description" %>
          <%= f.text_area :description, id: "project_description", class: "form-control", placeholder: "Enter project description", required: true %>
        </div>

        <div class="form-group">
          <%= f.collection_select :developer_ids, User.all, :id, :email, {}, { class: "form-control", multiple: true } %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      <% end %>
    </div> 
  </div>
</div>