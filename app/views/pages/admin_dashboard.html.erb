<div class="container" style="margin-top: 20px;">
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-3">
      <div class="card">
        <img class="card-img-top" src="<%= asset_url "projects_thumbnail.jpg" %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Projects</h5>
          <p class="card-text">Create some projects and manage them on the go</p>
          <%= link_to "Click here", projects_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class = "col-sm-12 col-md-12 col-lg-9">
      <h4>Tasks :-</h4>
      <table id="example" class="display" style="width:100%">
        <thead>
          <tr>
            <th>Task Name</th>
            <th>Status</th>
            <th>Assigned to</th>
            <th>Project</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.try(:created_tasks).try(:each) do |task| %>
            <tr>
              <td><%= task.try(:name) %></td>
              <td><%= task.try(:status) %></td>
              <td><%= task.try(:developer).try(:email) %></td>
              <td><%= task.try(:project).try(:name) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th>Task Name</th>
            <th>Status</th>
            <th>Assigned to</th>
            <th>Project</th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

<script>

  $(document).ready(function() {
    $('#example').DataTable( {
        initComplete: function () {
            this.api().columns().every( function () {
                var column = this;
                var select = $('<select><option value=""></option></select>')
                    .appendTo( $(column.footer()).empty() )
                    .on( 'change', function () {
                        var val = $.fn.dataTable.util.escapeRegex(
                            $(this).val()
                        );
 
                        column
                            .search( val ? '^'+val+'$' : '', true, false )
                            .draw();
                    } );
 
                column.data().unique().sort().each( function ( d, j ) {
                    select.append( '<option value="'+d+'">'+d+'</option>' )
                } );
            } );
        }
    } );
  } );
</script>