<div class = "container" style = "margin-top: 10px;">
	<div class = "row">
		<div class = "col-sm-6">
			<div class="list-group">
        <h5>Task details :-</h5> 
        <ul class="list-group">
          <li class="list-group-item">
            Name :- <%= @task.try(:name) %>
          </li>
          <li class="list-group-item" style="overflow-wrap: break-word;">
            <p>Description :- <%= @task.try(:description) %></p> 
          </li>
          <li class="list-group-item" style="overflow-wrap: break-word;">
            <p>Status :- <%= @task.try(:status) %></p> 
          </li>
          <li class="list-group-item" style="overflow-wrap: break-word;">
            <p>Assigned to :- <%= @task.try(:developer).try(:email) %></p> 
          </li>
          <li class="list-group-item" style="overflow-wrap: break-word;">
            <p>Created by :- <%= @task.try(:creator).try(:email) %></p> 
          </li>
        </ul>
      </div>
		</div>
		<div class = "col-sm-6">
			<%= form_for @task do |f| %>
				<div class = "form-group">
					<%= f.label :status %>
					<%= f.select :status, ["pending", "in_progress", "completed"], {}, { class: "form-control" } %>
				</div>
				<div class = "form-group">
					<%= f.submit "Update", class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>